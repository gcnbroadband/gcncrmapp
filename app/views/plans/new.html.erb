<div class="wrapper">
  <div id="page-heading">
    <h1><span class="glyphicon glyphicon-plus"></span> Create New Plan</h1>
    <hr/>
  </div>  
    
    <nav class="navbar navbar-default customer-navbar">
      <div class="container-fluid">
        <ul class="nav navbar-nav">
          <li><%= link_to '<span class="glyphicon glyphicon-th-list"></span> List'.html_safe, plans_path %></li>
          <% if current_user.gcn_admin == true %>
            <li class="active"><%= link_to '<span class="glyphicon glyphicon-plus"></span> Add new'.html_safe, new_plan_path %></li>
          <% end %>
        </ul>
        <ul class="nav navbar-nav navbar-right hidden-xs">
            <li class="dropdown">
                <a class="dropdown-toggle" data-toggle="dropdown" href="#">Filter by
                <span class="caret"></span></a>
                <ul class="dropdown-menu">
                  <li><a href="#">User Id</a></li>
                  <li><a href="#">Name</a></li>
                  <li><a href="#">Email</a></li>
                  <li><a href="#">Mobile no</a></li> 
                </ul>
            </li>
        </ul>
      </div>
    </nav>
    <div class="col-md-4 zone-form-block">
	    <%= form_for @plan do |f| %>
	    	<div class="row billing-addr">
	    		<div class="form-group col-md-12">
	    			<%= f.label :plan_value %>
	    			<%= f.text_field :plan_value, class: "form-control required" %>
	    		</div>
	    		<div class="form-group col-md-12">
	    			<%= f.label :plan_pattern %>
	    			<%= f.text_field :plan_pattern, class: "form-control required" %>
	    		</div>
	    		<div class="col-md-12">
	    			<%= f.submit class: "btn btn-raised btn-danger complaint_btn" %>
	    		</div>
	    	</div>
	    <% end %>
    </div>
</div>