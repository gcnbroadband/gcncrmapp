<div id="login-wrapper"> 
    <div class="container">
      <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4">
          <div class="panel panel-default login-panel">
            <div class="panel-heading">
              <h3 align="center" style="margin: 0px" class="login-session"><span class="glyphicon glyphicon-lock"></span> LOGIN</h3>
            </div>
            <div class="panel-body">
              <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                <div class="form-group label-floating">
                  <table class="table login_table">
                    <tr>
                      <td><i class="fa fa-user-secret fa-2x" aria-hidden="true"></i></td>
                      <td><%= f.email_field :email, class: "form-control", placeholder: "Enter email id" %></td>
                    </tr>
                  </table>
                  
                </div>

                <div class="form-group">
                  <table class="table login_table">
                    <tr>
                      <td><span class="glyphicon glyphicon-lock"></span></td>
                      <td><%= f.password_field :password, class: "form-control", placeholder: "Enter password" %></td>
                    </tr>
                  </table>
                </div>

                <% if devise_mapping.rememberable? -%>
                  <div class="checkbox login-checkbox">
                    <label>
                      <input id="user_remember_me" name="user[remember_me]" type="checkbox" value="1">  Remember me
                    </label> 
                  </div>
                <% end -%>

                <div class="actions">
                  <%= f.submit "Log in", class: "btn btn-lg btn-success btn-block" %>
                </div>
              <% end %>
            </div>
            <!-- <div class="panel-footer">
              <%#= render "devise/shared/links" %>
            </div> -->
          </div>
        </div>
      </div>
    </div>
</div>