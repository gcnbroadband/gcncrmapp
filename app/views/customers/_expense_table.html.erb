<% balance_amount = (@customer.bill_books.sum(:bill_amount).to_i-@customer.payment_detail.monthly_payment_cost.to_i-@customer.renewals.sum(:renew_amount).to_i) %>
<div class="table-responsive">
  <table class="table table-striped table-centered table-bordered table-expense">
    <tr>
      <th>Total amount paid</th>
      <th>Total Expense</th>
      <th>Balance amount</th>
      <th>Credit amount</th>
    </tr>
    <tr>
      <td><i class="fa fa-inr" aria-hidden="true"></i> <%= @customer.bill_books.sum(:bill_amount).to_i %></td>
      <td><i class="fa fa-inr" aria-hidden="true"></i> <%= @customer.payment_detail.monthly_payment_cost.to_i + @customer.renewals.sum(:renew_amount).to_i %></td>
      <td>
        <% if balance_amount > 0 %>
         <i class="fa fa-inr" aria-hidden="true"></i>  0
        <% else %> 
        <i class="fa fa-inr" aria-hidden="true"></i> <%= balance_amount.abs %>
        <% end %> 
      </td>
      <td>
        <% if balance_amount > 0 %>
         <i class="fa fa-inr" aria-hidden="true"></i>  <%= balance_amount %>
        <% else %> 
          <i class="fa fa-inr" aria-hidden="true"></i> 0
        <% end %> 
      </td>
    </tr>
  </table>
</div>
<hr/>