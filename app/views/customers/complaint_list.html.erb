<div class="container">
	<% if @customer.complaints.count > 0%>
	<div class="row mycomplaints">
		<div class="col-lg-offset-3 col-lg-6 col-md-offset-3 col-md-6 col-xs-12 col-sm-12">
			<h4 class="complaints-all"><span class="glyphicon glyphicon-user"></span>
			 	<%= @customer.cust_id %>
			</h4>
		<hr/></div>
	</div>
	<% @customer.complaints.each do |complaint| %>
		<div class="row">
			<div class="col-xs-12 col-md-4 col-md-offset-4">
			<div class="row billing-addr">
				<div class="col-md-12">
					  <h4 class="list-group-item-heading"><%= complaint.complaint_sub %></h4>
					  <p class="list-group-item-text"><%= truncate(complaint.complaint_body, length:100) %></p>
					  <hr/>
					  <div class="created-text">
					  	<small>Created on <%=time_tag(complaint.created_at)%>, <%=time_ago_in_words(complaint.created_at) %> ago </small>
					</div>
				</div>
			</div>
			</div>
		</div>
	<% end %> 
	<% else %>
		<div class="row">
			<div class="col-md-offset-4 col-md-4"><h4 class="complaints-all">No Complaints Yet.</h4></div>
		</div>
	<% end %>
</div>