<div class="container mycomplaints">
	<div class="row hidden-xs">
		<div class="col-md-offset-4 col-md-4 zone-form-block">
			<div class="row billing-addr">
				<%= link_to image_tag("aboutimg.png", :border=>0, class: "img-responsive logo-complaint-img" ), root_path, :alt=>"logo"  %>
			</div>	
		</div>
	</div>
	<div class="row">
		<div class="col-md-offset-4 col-md-4 col-xs-12">
			<%= form_tag(controller: "complaints", action: "create", method: "post") do %>
				<div class="row billing-addr">
					<div class="form-group col-xs-12 col-md-12">
						<%= label_tag(:custom_id, "User Id") %>
						<%= text_field_tag :custom_id, params[:customer_id], placeholder: 'Enter user id', class: 'form-control' %>
					</div>
					<div class="form-group col-xs-12 col-md-12">
						<%= label_tag(:complaint_sub, "Subject") %>
						<%= text_field_tag :complaint_sub, params[:complaint_sub], placeholder: 'Enter complaint subject', class: 'form-control' %>
					</div>
					<div class="form-group col-xs-12 col-md-12">
						<%= label_tag(:complaint_body, "Complaint body") %>
						<%= text_area :complaint_body, params[:complaint_body], rows: 3, placeholder: 'Enter complaint description', class: 'form-control' %>
						<%#= text_field_tag :complaint_body, params[:complaint_body], placeholder: 'Enter complaint description', class: 'form-control' %>
					</div>
					<div class="col-xs-12 col-md-12">
						<%= submit_tag("Take complaint", class: "btn btn-raised btn-danger btn-block complaint_btn") %>
					</div>
					<div class="col-xs-12 col-md-12" align="center">
						<br/>
						<%=link_to '<i class="fa fa-arrow-left" aria-hidden="true"></i> Back'.html_safe, root_path %>
					</div>
				</div>	
			<% end %>
		</div>
	</div>
</div>