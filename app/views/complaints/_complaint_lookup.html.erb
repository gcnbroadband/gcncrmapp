<div class="row" id="customer-complaint-block">
	<div class="col-md-12 col-xs-12"  id="customer-complaint-box">
		<div class="col-md-offset-3 col-md-6 col-xs-12 custom-well-lookup">
			<%=form_tag search_complaints_path, remote: true, method: :get, id: 'look-up-complaint-form' do %>
			<div class="form-group look-up-friend look-up-text-field col-xs-7 col-md-7">
				<%= text_field_tag :search_params, params[:search_params], placeholder: 'Name, user id, email, mobile number', class: 'form-control input-lg', autofocus: true %>
			</div>
			<div class="form-group look-up-friend col-md-5 col-xs-5">
				<%=button_tag(type: :submit, class: 'btn btn-lg btn-success look-sub-btn') do %>
					<span id="search-complaint-cont"><i class="fa fa-search" aria-hidden="true"></i> <span class="hidden-xs">Search</span></span>
					<span id="spin-lookup"><i class="fa fa-cog fa-spin fa-lg" aria-hidden="true"></i> <span class="hidden-xs">Searching... </span></span>
				<% end %>
				<%= link_to '<i class="fa fa-times fa-lg" aria-hidden="true"></i>'.html_safe, newcomplaint_path, class: "btn btn-lg btn-danger close-lookup close-comp-lookup" %>
			</div>
			<% end %>
		</div>
		<div class="col-md-12 col-xs-12">
			<hr/>
		</div>
	</div>	

	

<% if @customer %> 
	<% if @customer.size > 0 %>
		<div class="col-lg-12 col-xs-12" id="customer-complaint-results">
			 <div class="table-responsive">
			  <table class="table table-striped table-centered table-bordered">
			    <thead>
			      <tr class="danger">
			      	<th>Sl.no</th>
			      	<th>Zone</th>
			      	<th>User Id</th>
			        <th>Date</th>
			        <th>name</th>
			        <th>Mobile no</th>
			        <th>Email</th>
			        <th>Telephone no</th>
			        <% if (current_user.gcn_admin == true) || (current_user.branch_manager == true) || (current_user.tele_caller_team_lead == true) || (current_user.tele_caller == true) %>
			        	<th></th>
			        <% end %>
			      </tr>
			    </thead>
			    <tbody>
			      <% @customer.each do |customer| %>
			      	<% if current_user.gcn_admin == true %>
			      		<tr>
			      		  <td><%= customer.id %></td>
			      		  <td><i class="fa fa-map-marker fa-lg" aria-hidden="true"></i> <%= customer.zone.zone_name %></td>
			      		  <td>
			      		  	<% if (customer.cust_id.nil? || customer.cust_id.empty?) %>
			      		  		<% if (current_user.tele_caller == true) || (current_user.gcn_admin == true)%>
			      		  			<%= link_to 'Activate',activate_customer_path(customer), class: "btn btn-xs btn-danger btn-raised cust-see-detail-btn" %>
			      		  		<% else %>
			      		  			<span style="color:red"><strong>Inactive</strong></span>
			      		  		<% end %>	
			      		  	<% else %>
			      		  		<strong><i class="fa fa-user" aria-hidden="true"></i> <%= customer.cust_id %></strong>
			      		  	<% end %>
			      		  </td>
			      		  <td><i class="fa fa-calendar" aria-hidden="true"></i> <%= customer.date %></td>
			      		  <td><%= customer.name %></td>
			      		  <td><i class="fa fa-mobile fa-lg" aria-hidden="true"></i> <%= customer.billing_mobile_no %></td>
			      		  <td><i class="fa fa-envelope-o" aria-hidden="true"></i> <%= customer.billing_email %></td>
			      		  <td><%= customer.billing_telephone_no %></td>
			      		  <% if (current_user.gcn_admin == true) || (current_user.branch_manager == true) || (current_user.tele_caller_team_lead == true) || (current_user.tele_caller == true) %>
			      		  <td><%=link_to '<i class="fa fa-bell-o" aria-hidden="true"></i> Raise complaint'.html_safe, create_custom_complaint_path(customer), class: "btn btn-xs btn-info btn-raised cust-see-detail-btn" %></td>
			      		  <% end %>
			      		</tr>
			      	<% else %>
			      		<% if customer.zone == current_user.zone %>
			      			<tr>
			      			  <td><%= customer.id %></td>
			      			  <td><i class="fa fa-map-marker fa-lg" aria-hidden="true"></i> <%= customer.zone.zone_name %></td>
			      			  <td>
			      			  	<% if (customer.cust_id.nil? || customer.cust_id.empty?) %>
			      			  		<% if (current_user.tele_caller == true) || (current_user.gcn_admin == true)%>
			      			  			<%= link_to 'Activate',activate_customer_path(customer), class: "btn btn-xs btn-danger btn-raised cust-see-detail-btn" %>
			      			  		<% else %>
			      			  			<span style="color:red"><strong>Inactive</strong></span>
			      			  		<% end %>	
			      			  	<% else %>
			      			  		<strong><i class="fa fa-user" aria-hidden="true"></i> <%= customer.cust_id %></strong>
			      			  	<% end %>
			      			  </td>
			      			  <td><i class="fa fa-calendar" aria-hidden="true"></i> <%= customer.date %></td>
			      			  <td><%= customer.name %></td>
			      			  <td><i class="fa fa-mobile fa-lg" aria-hidden="true"></i> <%= customer.billing_mobile_no %></td>
			      			  <td><i class="fa fa-envelope-o" aria-hidden="true"></i> <%= customer.billing_email %></td>
			      			  <td><%= customer.billing_telephone_no %></td>
			      			  <td><%=link_to '<i class="fa fa-bell-o" aria-hidden="true"></i> Raise complaint'.html_safe, create_custom_complaint_path(customer), class: "btn btn-xs btn-info btn-raised cust-see-detail-btn" %></td>
			      			</tr>
			      		<% end %>
			      	<% end %>
			      <% end %>
			    </tbody>
			  </table>
			</div>
		</div>
	<% else %>
		<div class="col-lg-12 col-xs-12">
			<p>No customer data.</p>	
		</div>
		
	<% end %>
<% end %>
<div class="col-md-12 col-xs-12" id="lookup-errors"></div>
</div>